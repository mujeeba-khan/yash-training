	<context:component-scan base-package="com.yash" />
 
 
 	<bean id = "lifecycle" class = "com.yash.lifecyclemethodsspring.LifeCycleMethods">
      <property name = "msg" value = "Welcome to spring!"/>
   </bean>
  
  
	<bean id = "lcmethods" class = "com.yash.lifecyclemethodsspring.LCMethods" 
		init-method="customInit" destroy-method="customDestroy">
      <property name = "msg" value = "Welcome to spring people!"/>
   </bean>
  
